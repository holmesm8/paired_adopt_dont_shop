<h1>Edit Dog</h1>

<%= form_tag "/pets/#{@pet.id}", method: :patch do %>
  <br><%= label_tag :image %>
  <br><%= text_field_tag :image, @pet.image%>
  <br><%= label_tag :name %>
  <br><%= text_field_tag :name, @pet.name%>
  <br><%= label_tag :description %>
  <br><%= text_field_tag :description, @pet.description%>
  <br><%= label_tag :age %>
  <br><%= text_field_tag :age, @pet.age%>
  <br><%= label_tag :sex %>
  <br><%= text_field_tag :sex, @pet.sex%>
  <br>
  <br>
  <%= submit_tag 'Update Pet'%>
<% end %>
